@{
    ViewData["Title"] = "Homework";
    Layout = "~/Views/Table/_LayoutTable.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Домашнее задание</h1>
    <table class="table-wrapper">
        <tr>
            <th class="id">Id</th>
            <th>Название</th>
            <th class="description">Описание</th>
            <th>Цена за штуку</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
        <tr>
            <td class="id"><i>Целое число</i></td>
            <td><i>Текст</i></td>
            <td class="description"><i>Текст</i></td>
            <td><i>Дробное число</i></td>
            <td><i>Целое число</i></td>
            <td><i>Иконки действий</i></td>
        </tr>
        @for (int i = 0; i < Model.Length; i++)
        {
            <tr>
                <td class="id">@(i + 1)</td>
                <td>@Model[i].Title</td>
                <td class="description">@Model[i].Description</td>
                <td>@Model[i].Price</td>
                <td>@Model[i].Quantity</td>
                <td>✎⌫</td>
            </tr>
        }
    </table>
</div>

@section Footer {
    © Наш Копирайтинг
}